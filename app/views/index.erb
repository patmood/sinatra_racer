<% if session[:player1] && session[:player2] %>

<div class="game">

  <div id="player1"></div>
  <div id="player2"></div>

  <div class="stats">

    <p><%= Player.find(session[:player1]).wins %></p>
    <p><%= Player.find(session[:player2]).wins  %></p>
    
  
  

  </div>

</div>

<form action="/logout" method="get"><input type="submit" value="logout"></form>
<p><%= "#{Player.find(session[:player1]).name}: #{Player.find(session[:player1]).wins} wins<br> #{Player.find(session[:player2]).name}: #{Player.find(session[:player2]).wins} wins" %></p>

<% else %>

<div class="container">
  <form method="post" action="/">
